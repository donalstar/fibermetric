<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <ImageView
        android:id="@+id/imageTaskState"
        android:src="@drawable/ic_task_scheduled_list_40x40"
        android:paddingLeft="2dp"
        android:paddingRight="5dp"
        android:contentDescription="@string/description"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvRowNdx"
        android:layout_toRightOf="@id/imageTaskState"
        android:layout_centerVertical="true"
        android:textColor="#de000000"
        android:textSize="16sp"
        android:textStyle="normal"
        android:fontFamily="sans-serif-medium"
        android:layout_width="30dip"
        android:layout_height="wrap_content"
        android:text="@string/stubShort"/>

    <TextView
        android:id="@+id/tvRowName"
        android:layout_toRightOf="@id/tvRowNdx"
        android:layout_centerVertical="true"
        android:textColor="#de000000"
        android:textSize="16sp"
        android:textStyle="normal"
        android:maxLines="3"
        android:fontFamily="sans-serif-medium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/stubShort"/>
</RelativeLayout>