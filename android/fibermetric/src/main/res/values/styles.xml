<?xml version="1.0" encoding="UTF-8"?>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="Pager">
        <item name="android:background">#ffff66</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RecyclerList">
        <item name="android:background">#ffffff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EmptyListMessage">
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">@color/black54</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="RelativeForm">
        <item name="android:background">#ffffff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LeftColumn">
        <item name="android:gravity">right</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#990000</item>
    </style>

    <style name="RightColumn">
        <item name="android:textColor">#990000</item>
    </style>


    <style name="JobTitleColumn">
        <item name="android:textColor">@color/black54</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="JobLeftColumn">
        <item name="android:textColor">#d92d0b</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="JobRightColumn">
        <item name="android:textColor">#de000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="JobBanner">
        <item name="android:textColor">#ef4f23</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="JobSubBanner">
        <item name="android:textColor">#8a000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="JobAddress">
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:textColor">#de000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="JobRowBanner">
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textColor">#de000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="JobRow">
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textColor">#8a000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="JobRowDuration">
        <item name="android:textColor">#99999999</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="JobRowState">
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textColor">#8a000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="JobProgressLeftBanner">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:textColor">#8a000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="JobProgressRightBanner">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:textColor">#de000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Inventory Part View -->
    <style name="FieldLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black54</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">13dp</item>
    </style>

    <style name="FieldText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/black87</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PartHeaderImage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">202dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="PartTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingBottom">50dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="Title1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/black87</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PartTitle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/black54</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Chain of Custody Line Item -->

    <style name="COCHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/brownishGrey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="COCTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/black87</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="COCLineText">
        <item name="android:gravity">left|top</item>
        <item name="android:textColor">@color/black54</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Calendar -->
    <style name="HeaderCell1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/tomato</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HeaderCell2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/tomato</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CalendarCell">
        <item name="android:background">#ffff66</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/black54</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- barcode scan activity -->

    <style name="BarcodeScanPrompt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">50dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">@color/tomato</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Report a Problem -->
    <style name="ReportProblemPartName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/black87</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/inventory_part_left_margin</item>
    </style>

    <style name="ReportProblemFieldPrompt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="ActionBarTitle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="InventoryTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#ffffff</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/InventoryTabAppearance</item>
        <item name="tabSelectedTextColor">#ffffff</item>
    </style>

    <style name="InventoryTabAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white70</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="FeedbackHeader">
        <item name="android:textColor">@color/black87</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FeedbackLabel">
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FeedbackCommentLabel">
        <item name="android:textColor">@color/warm_grey_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
